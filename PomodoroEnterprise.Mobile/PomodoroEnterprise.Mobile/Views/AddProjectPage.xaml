<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodoroEnterprise.Mobile.Views.AddProjectPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="CenterAndExpand"
                     Margin="20,0,20,0">

            <Entry x:Name="txtName" Placeholder="Project Name" HorizontalOptions="FillAndExpand" />
            <Entry x:Name="txtDescription" Placeholder="Project Description" HorizontalOptions="FillAndExpand"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>