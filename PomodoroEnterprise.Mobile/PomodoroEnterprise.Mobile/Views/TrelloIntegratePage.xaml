<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodoroEnterprise.Mobile.Views.TrelloIntegratePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="CenterAndExpand"
                     Margin="20,0,20,0">

            <Entry x:Name="txtUsername" Placeholder="Username" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="txtPassword" Placeholder="Password" HorizontalOptions="FillAndExpand"/>

            <Button HorizontalOptions="FillAndExpand" Text="Login and Import Data" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>